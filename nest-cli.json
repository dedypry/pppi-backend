{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/pppi-be-nest/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/pppi-be-nest/tsconfig.app.json",
    "assets": [
      {
        "include": "../src/views/**/**",
        "outDir": "./dist/apps/pppi-be-nest",
        "watchAssets": true
      }
    ]
  },
  "monorepo": true,
  "root": "apps/pppi-be-nest",
  "projects": {
    "background-jobs": {
      "type": "application",
      "root": "apps/background-jobs",
      "entryFile": "main",
      "sourceRoot": "apps/background-jobs/src",
      "compilerOptions": {
        "tsConfigPath": "apps/background-jobs/tsconfig.app.json"
      }
    },
    "file-upload": {
      "type": "application",
      "root": "apps/file-upload",
      "entryFile": "main",
      "sourceRoot": "apps/file-upload/src",
      "compilerOptions": {
        "tsConfigPath": "apps/file-upload/tsconfig.app.json"
      }
    },
    "pppi-be-nest": {
      "type": "application",
      "root": "apps/pppi-be-nest",
      "entryFile": "main",
      "sourceRoot": "apps/pppi-be-nest/src",
      "compilerOptions": {
        "tsConfigPath": "apps/pppi-be-nest/tsconfig.app.json"
      }
    },
    "websocket": {
      "type": "application",
      "root": "apps/websocket",
      "entryFile": "main",
      "sourceRoot": "apps/websocket/src",
      "compilerOptions": {
        "tsConfigPath": "apps/websocket/tsconfig.app.json"
      }
    }
  }
}